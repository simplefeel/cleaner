.w-input {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 10rpx;
    display: inline-block;
    height: 100%;
    font-size: 30rpx;
    margin-right: 10rpx;
    min-width: 75%;
    padding-left: 10rpx;
}

.add-input-container {
    display: flex;
    height: 80rpx;
    align-items: center;
    justify-content: space-between;
}

.add-btn {
    color: #44b549;
    font-size: 30rpx;
    margin-right: 0;
    height: 100%;
}

.place-input {
    color: #bbbbbb;
}
